{
  "tasks": {
    "[Init] Start/restart Api2 server": {
      "schedule": "*/15 * * * *",
      "run_on_load": true,
      "bash_script": [
        "[ ! -d 'runner' ] && git clone  --depth 1 https://github.com/DefiLlama/task-runner runner",
        "[ ! -d 'repo' ] && mkdir repo # we do this (plus below line) to clone repo first time into shared volume",
        "[ ! -d 'repo/defi' ] && git clone  --depth 1 https://github.com/DefiLlama/defillama-server tmp_repo && mv tmp_repo/* repo && mv tmp_repo/.* repo; rm -rf tmp_repo",
        "cd runner",
        "git pull >/dev/null ",
        "cd ../repo/defi",
        "git stash >/dev/null ",
        "git pull >/dev/null ",
        "git submodule update --init --recursive   >/dev/null ",
        "git submodule update --remote --merge   >/dev/null ",
        "cd DefiLlama-Adapters",
        "git checkout main   >/dev/null ",
        "git pull   >/dev/null ",
        "cd ..",
        "npm i  >/dev/null",
        "npm update @defillama/sdk  >/dev/null",
        "cd DefiLlama-Adapters",
        "git checkout main   >/dev/null ",
        "git pull   >/dev/null ",
        "cd ..",
        "# set up dummy imports",
        "npm ls  @types/lodash",
        "IS_API2_SERVER=true npm run prebuild",
        "npx ts-node src/api2/cron-task/dimensions.ts",
        "SKIP_CAHE_WRITE_R2=true npm run cache-config",
        "npm run api2-cron-task",
        "# start/rolling restart api2 server",
        "npx pm2 start src/api2/ecosystem.config.js || npx pm2 reload >/dev/null"
      ]
    },
    "[Cron] Update Raises data": {
      "schedule": "42 */2 * * *",
      "run_on_load": true,
      "bash_script": [
        "cd ./repo/defi",
        "npx ts-node src/api2/cron-task/raises.ts"
      ]
    },
    "[Cron] Update Dimensions data": {
      "schedule": "45 */2 * * *",
      "run_on_load": true,
      "bash_script": [
        "cd ./repo/defi",
        "npx ts-node src/api2/cron-task/dimensions.ts"
      ]
    },
    "[Logs]": {
      "run_on_load": true,
      "no_schedule": true,
      "bash_script": [
        "cd ./repo/defi",
        "npx pm2 logs"
      ]
    }
  }
}